<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:id="@id/first_image">
                <bitmap android:src="@drawable/classic_novel_bg" android:tileMode="repeat" />
            </item>
            <item>
                <shape>
                    <solid android:color="#5533ccff" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <layer-list>
            <item>
                <bitmap android:src="@drawable/classic_novel_bg" android:tileMode="repeat" />
            </item>
            <item>
                <shape>
                    <stroke android:width="2.0dip" android:color="#55dfdfdf" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <bitmap android:src="@drawable/classic_novel_bg" android:tileMode="repeat" />
            </item>
        </layer-list>
    </item>
</selector>