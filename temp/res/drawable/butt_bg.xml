    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4.0px" android:top="4.0px" android:right="4.0px" android:bottom="4.0px">
                <shape android:shape="rectangle">
                    <solid android:color="#33555555" />
                    <corners android:radius="8.0dip" />
                </shape>
            </item>
            <item android:left="4.0px" android:top="4.0px" android:right="4.0px" android:bottom="4.0px">
                <shape android:shape="rectangle">
                    <gradient android:startColor="#00000000" android:endColor="#00000000" android:angle="90.0" android:centerX="0.5" android:centerColor="#55000000" />
                    <corners android:radius="8.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
